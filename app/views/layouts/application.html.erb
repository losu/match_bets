<!DOCTYPE html>
<html>
<head>
  <title>MatchBets</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <!--Navbar-->
  <nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">MatchBets</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <% if @current_user%>
        <li class="dropdown">
        <!-- Tutaj chcialbym aby sie rozwijała lista grup -->
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Twoje grupy <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "Utwórz grupę", new_group_path %></li>
          <li class="divider"></li>
          <!-- Tutaj foreach wyswietlajacy grupy-->

            <%- current_user.groups.each do |group|   %>

              <li><%= link_to group.name, group_path(group.id) %></li>

          <%end%>
          <!-- Koniec foreacha-->
          </ul>
        </li>
        <%end%>

        <% if current_user%>
          <% if current_user.admin %>
            <li class="dropdown">
            <!-- Tutaj chcialbym aby sie rozwijała lista grup -->

              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Panel Administratora <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
              <!-- Tutaj foreach wyswietlajacy grupy-->
                <li><%= link_to 'Lista Meczów', matches_path %></a></li>
                <li><%= link_to 'Dodaj mecz', new_match_path %></li>
              <!-- Koniec foreacha-->
              </ul>
            </li>
          <%end%>
        <%end%>


      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user%>
          <% if current_user.provider == "facebook"%>
            <li><a href="#"><%= current_user.name %></a></li>
          <%else%>
            <li><a href="#"><%= current_user.nickname %></a></li>
          <%end%>
          <li> <%= link_to 'Wyloguj sie!', destroy_user_session_path, method: :delete %> </li>
        <% else %>
           <li> <%= link_to 'Zaloguj sie!', new_user_session_path %> </li>
           <li> <%= link_to 'Zarejestruj sie', new_user_registration_path %> </li>
        <%end%>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<!--/.Navbar-->
  <div>
    <% if alert%>
    <p>ALERT!: <%=alert%></p>
    <% elsif notice %>
    <p>notice: <%=notice%></p>
    <% end %>
  </div>

  <%= yield %>


</body>
</html>

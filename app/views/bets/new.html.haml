
= form_for(@bet, html: {class: "form-signin"}) do |f|
  %h2.form-signin-heading Add bet:
  /=f.label Match.find(params[:match_id]).team_name_1
  %center
    %h2
      = f.label Match.find(params[:match_id]).team_name_1
  = f.text_field :team_score1, class: 'form-control'
  %center
    %h2 
      = f.label Match.find(params[:match_id]).team_name_2
  = f.text_field :team_score2, class: 'form-control'

  = f.hidden_field :group_id, value: params[:group_id]
  = f.hidden_field :match_id, value: params[:match_id]
  = f.submit "Add!", class: "btn btn-lg btn-primary btn-block"
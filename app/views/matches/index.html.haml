%center
  %h1 Matches list:
.well
  %table.table.table-striped
    %thead
      %tr
        %th #
        %th team 1
        %th team 2
        %th score 1
        %th score 2
        %th deadline
        %th
    - @matches.each do |match|    
      %thead
        %tr
          = form_for(match) do |f|
            %th= link_to 'evaluate', evaluate_for_match_path(id: match.id), method: :post
            %th
              =f.hidden_field :id, value: params[match.id]
            %th #{match.team_name_1}
            %th #{match.team_name_2}
            %th
              =f.text_field :team_score_1, value: params[team_score_1: match.team_score_1]
            %th
              =f.text_field :team_score_2, value: params[team_score_2: match.team_score_2]
            %th #{match.deadline}
            %th
              =f.submit "Save!", class: "btn, btn-primary"

			
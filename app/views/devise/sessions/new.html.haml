.container
  = form_for(resource, as: resource_name, url: session_path(resource_name),html: {class: "form-signin"}) do |f|
    %h2.form-signin-heading Sign in
    %div
      = f.email_field :email, autofocus: true , class: "form-control",placeholder: :has≈Ço
      %br/
    %div
      = f.password_field :password, autocomplete: "off", class: "form-control",placeholder: :password
    - if devise_mapping.rememberable?
      %div
        = f.check_box :remember_me
        = f.label :remember_me
    %div= f.submit "Sign in",  class: "btn btn-lg btn-primary btn-block"
    - if devise_mapping.omniauthable?
      - resource_class.omniauth_providers.each do |provider|
        .form-group    
        = link_to "Sign in with #{provider.to_s.titleize}",  user_omniauth_authorize_path(:facebook), class: "btn btn-lg btn-primary btn-block"
      %br/

  = render "devise/shared/links"
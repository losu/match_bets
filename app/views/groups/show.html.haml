.container
    Zalogowany jako: 
    =current_user.email

    =link_to "wyloguj", destroy_user_session_path, method: :delete

.container
    .w50.center-block
        %h1 Nazwa grupy: 
        =@group.name 
        id: 
        =@id

    = form_for @invite do |f|
        = f.hidden_field :group_id, :value => @id
        = f.label :email
        = f.email_field :email, :value => @invite.email
        = f.submit 'Send' 

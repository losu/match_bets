  
= form_for(@tournament, html: {class: "form-signin"}) do |m|
  %center
    %h2.form-signin-heading Add tournament
  = m.text_field :name, class: "form-control", placeholder: "name"
 
  %center
    %button.btn.btn-primary.btn-lg{type: "submit"} Add!
    %a.btn.btn-primary.btn-lg{role: "button", href: tournaments_path} Cancel